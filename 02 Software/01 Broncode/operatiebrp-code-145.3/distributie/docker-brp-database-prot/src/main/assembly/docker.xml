<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>./dbupdate</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>nl.bzk.brp:brp-database</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>bmr/Postgres/BRP_init_database.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_structuur.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_structuur_aanvullend.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_statische_stamgegevens.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_custom_changes.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_indexen.sql</include>
                    <include>bmr/Postgres/Prot/Protocol_BRP_rechten.sql</include>
                    <include>bmr/Postgres/Alg/Algemeen_BRP_structuur_aanvullend.sql</include>
                    <include>bmr/Postgres/Alg/Algemeen_BRP_custom_changes.sql</include>
                </includes>
            </unpackOptions>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>02_laadbrpdb.sh</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
