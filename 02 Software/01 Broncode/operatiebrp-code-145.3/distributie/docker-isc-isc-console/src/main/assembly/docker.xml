<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>docker</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <outputDirectory>./</outputDirectory>
            <directory>src/main/assembly/docker</directory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>./lib</outputDirectory>
            <includes>
                <include>nl.bzk.migratiebrp:migr-isc-console-datasource:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>./</outputDirectory>
            <!-- The filename sets the context-path -->
            <outputFileNameMapping>jbpm-console.war</outputFileNameMapping>
            <includes>
                <include>nl.bzk.migratiebrp:migr-isc-console-webapp:war:*</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>./</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>*:*:war:*</include>
            </includes>
            <excludes>
                <exclude>nl.bzk.migratiebrp:migr-isc-console-webapp:war:*</exclude>
            </excludes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>

</assembly>