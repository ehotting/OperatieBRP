<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
            http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
            http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>test-package</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/brp-docker-test/testcases</directory>
            <outputDirectory>e2etest/testcases</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/brp-docker-test/autorisaties</directory>
            <outputDirectory>e2etest/autorisaties</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/brp-docker-test/levering_autorisaties</directory>
            <outputDirectory>e2etest/levering_autorisaties</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/brp-docker-test/bijhoudingsautorisaties</directory>
            <outputDirectory>e2etest/bijhoudingsautorisaties</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/brp-api-test/testcases</directory>
            <outputDirectory>apitest/testcases</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/brp-api-test/levering_autorisaties_nieuw</directory>
            <outputDirectory>apitest/levering_autorisaties_nieuw</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/blobs</directory>
            <outputDirectory>blobs</outputDirectory>
        </fileSet>

    </fileSets>


</assembly>
