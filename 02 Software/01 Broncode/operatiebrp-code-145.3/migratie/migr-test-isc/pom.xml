    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/EmptyTest.java</exclude>
                        <exclude>**/Integratie*Test.java</exclude>
                        <exclude>**/Regressie*Test.java</exclude>
                        <exclude>**/ProcessenTest.java</exclude>
                        <exclude>**/SingleTest.java</exclude>
                        <exclude>**/ParameterizedTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/IntegratieIT.java</exclude>
                        <exclude>**/RegressieBrpIT.java</exclude>
                        <exclude>**/RegressieSyncInitIT.java</exclude>
                        <exclude>**/RegressieSyncIT.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>zip</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-zip</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <finalName>migr-test-isc</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                            <execution>
                                <id>make-test-zips</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/regressie-brp-afnemerindicatie-gba.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-brp-archivering-gba.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-brp-beheer.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-brp-bevraging-gba.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-brp-bijhouding-gba.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-isc.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-isc-beheer.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-iv-naarbrp.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-iv-logging.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-sync.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-sync-init.xml</descriptor>
                                        <descriptor>src/main/assembly/regressie-voisc.xml</descriptor>
                                        <descriptor>src/main/assembly/integratie-iv.xml</descriptor>
                                        <descriptor>src/main/assembly/integratie-int.xml</descriptor>
                                        <descriptor>src/main/assembly/integratie-leveringvergelijking.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>processen</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <redirectTestOutputToFile>false</redirectTestOutputToFile>
                            <test>ProcessenTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
