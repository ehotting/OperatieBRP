<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- BRP -->

    <bean id="brpDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${brp.jdbc.driverClassName:org.postgresql.Driver}"/>
        <property name="url" value="${brp.jdbc.url:jdbc:postgresql://localhost/BRP}"/>
        <property name="username" value="${brp.jdbc.username:migratie}"/>
        <property name="password" value="${brp.jdbc.password:M1gratie}"/>
    </bean>

    <bean id="brpArchiveringDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${brp.archivering.jdbc.driverClassName:org.postgresql.Driver}"/>
        <property name="url" value="${brp.archivering.jdbc.url:jdbc:postgresql://localhost/BRP}"/>
        <property name="username" value="${brp.archivering.jdbc.username:migratie}"/>
        <property name="password" value="${brp.archivering.jdbc.password:M1gratie}"/>
    </bean>

    <bean id="brpProtocolleringDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${brp.protocollering.jdbc.driverClassName:org.postgresql.Driver}"/>
        <property name="url" value="${brp.protocollering.jdbc.url:jdbc:postgresql://localhost/BRP}"/>
        <property name="username" value="${brp.protocollering.jdbc.username:migratie}"/>
        <property name="password" value="${brp.protocollering.jdbc.password:M1gratie}"/>
    </bean>
</beans>