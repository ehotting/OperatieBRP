<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="brpSelectieJmxConnectorCredentials" class="nl.bzk.algemeenbrp.util.jmx.client.CredentialsFactory">
        <property name="username" value="${brp.selectie.jmx.service.username:admin}"/>
        <property name="password" value="${brp.selectie.jmx.service.password:admin}"/>
    </bean>

    <bean id="brpSelectieJmxConnector" class="org.springframework.jmx.support.MBeanServerConnectionFactoryBean">
        <property name="environment">
            <map>
                <entry key="jmx.remote.credentials" value-ref="brpSelectieJmxConnectorCredentials"/>
                <entry key="jmx.remote.requesttimeout" value="60"/>
            </map>
        </property>
        <property name="serviceUrl" value="service:jmx:simple://${brp.selectie.jmx.service.host:localhost}:${brp.selectie.jmx.service.port:3481}"/>
    </bean>
</beans>
