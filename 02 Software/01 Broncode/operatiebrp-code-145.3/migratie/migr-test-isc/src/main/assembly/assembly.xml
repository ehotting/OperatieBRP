<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>target/${project.build.finalName}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>target/${project.build.finalName}-tests.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/keystores/keystore.jks</source>
            <outputDirectory>/keystores</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/keystores/truststore.jks</source>
            <outputDirectory>/keystores</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/assembly/lcp.cmd</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/assembly/readme.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/assembly/test.cmd</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/assembly/test.sh</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>  
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/example</directory>
            <outputDirectory>/example</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
			<!--
			<excludes>
				<exclude>org.apache.geronimo.specs:*</exclude>
			</excludes>
			-->
        </dependencySet>
    </dependencySets>
</assembly>