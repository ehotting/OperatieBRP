<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp</groupId>
    <artifactId>migr-extern</artifactId>
    <version>145.3</version>
    <packaging>pom</packaging>

    <name>Migr - Externe libs</name>

    <distributionManagement>
        <repository>
            <id>brpcentral</id>
            <name>mGBA releases voor Migratie</name>
            <url>https://www.modernodam.nl/nexus3/repository/releases</url>
        </repository>
        <snapshotRepository>
            <id>brpcentral</id>
            <name>mGBA snapshots voor Migratie</name>
            <url>https://www.modernodam.nl/nexus3/repository/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.4</version>
                <executions>

                    <!-- GBA-v libraries -->

                    <execution>
                        <id>install-gbav-bcm</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/bcm-2.7.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>bcm</artifactId>
                            <version>2.7</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-gbav-core</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/core-1.0.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>core</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-gbav-export</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/export-1.0.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>export</artifactId>
                            <version>1.0</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-gbav-spontaan</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/spontaan-1.0.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>spontaan</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-spontaan-api</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/spontaan-api-1.0.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>spontaan-api</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-spontaan-core</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/core-1.0.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>spontaan-core</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-gbav-spg-test</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>gbav/spg-test.jar</file>
                            <groupId>gbav</groupId>
                            <artifactId>spg-test</artifactId>
                            <version>1.0</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>

                    <!-- BIRT libraries -->

                    <execution>
                        <id>install-birt-rotated-text</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>birt/birt.controls.lib_2.5.2.1.jar</file>
                            <groupId>birt</groupId>
                            <artifactId>controls</artifactId>
                            <version>2.5.2.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-extern-lib</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>2.4</version>
                        <executions>

                            <!-- GBA-v libraries -->

                            <execution>
                                <id>install-gbav-bcm</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/bcm-2.7.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>bcm</artifactId>
                                    <version>2.7</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-gbav-core</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/core-1.0.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>core</artifactId>
                                    <version>1.1</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-gbav-export</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/export-1.0.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>export</artifactId>
                                    <version>1.0</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-gbav-spontaan</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/spontaan-1.0.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>spontaan</artifactId>
                                    <version>1.1</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-spontaan-api</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/spontaan-api-1.0.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>spontaan-api</artifactId>
                                    <version>1.1</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-spontaan-core</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/core-1.0.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>spontaan-core</artifactId>
                                    <version>1.1</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-gbav-spg-test</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>gbav/spg-test.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>gbav</groupId>
                                    <artifactId>spg-test</artifactId>
                                    <version>1.0</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>

                            <!-- BIRT libraries -->

                            <execution>
                                <id>install-birt-rotated-text</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>birt/birt.controls.lib_2.5.2.1.jar</file>
                                    <repositoryId>brpcentral</repositoryId>
                                    <url>https://www.modernodam.nl/nexus3/repository/thirdparty</url>
                                    <groupId>birt</groupId>
                                    <artifactId>controls</artifactId>
                                    <version>2.5.2.1</version>
                                    <packaging>jar</packaging>
                                    <createChecksum>true</createChecksum>
                                    <generatePom>true</generatePom>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
