<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.migratiebrp</groupId>
        <artifactId>migr-test-persoon</artifactId>
        <version>145.3</version>
        <relativePath>../migr-test-persoon</relativePath>
    </parent>

    <artifactId>migr-test-persoon-naarlo3</artifactId>
    <name>Migr - Test - Persoon - Conversie BRP naar LO3</name>

    <properties>
        <resource.dir>local</resource.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-util-common</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-test-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-model</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-regels</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-regels</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-bericht-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-util-excel</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
            <type>test-jar</type>
        </dependency>

        <!-- DBUnit -->
        <dependency>
            <groupId>org.dbunit</groupId>
            <artifactId>dbunit</artifactId>
        </dependency>
    </dependencies>

    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/non-packaged-resources/${resource.dir}</directory>
            </testResource>
        </testResources>
    </build>
    <profiles>
        <profile>
            <id>default-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>-Dspring.profiles.active=memoryDS</argLine>
                            <excludes>
                                <exclude>**/BrpNaarLo3ConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <exclude>**/CoverageTest.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie-coverage</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>-Dspring.profiles.active=memoryDS</argLine>
                            <excludes>
                                <exclude>**/BrpNaarLo3ConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <!--<exclude>**/CoverageTest.java</exclude>-->
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>liquibase</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>read-project-properties</goal>
                                </goals>
                                <configuration>
                                    <files>
                                        <file>
                                            src/test/non-packaged-resources/${resource.dir}/datasource.naarlo3.properties
                                        </file>
                                    </files>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <version>${liquibase.version}</version>
                        <configuration>
                            <driver>org.postgresql.Driver</driver>
                            <url>jdbc:postgresql://${database.host}/${database.name}</url>
                            <username>${database.username}</username>
                            <password>${database.password}</password>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>nl.bzk.brp</groupId>
                                <artifactId>brp-database</artifactId>
                                <version>${database.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.postgresql</groupId>
                                <artifactId>postgresql</artifactId>
                                <version>${postgresql.version}</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>create-db-brp</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                                <configuration>
                                    <dropFirst>true</dropFirst>
                                    <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                                    <changeLogFile>liquibase/changeset/brp-databases.xml</changeLogFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>conversie</id>
            <properties>
                <resource.dir>remote</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>BrpNaarLo3ConversieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
