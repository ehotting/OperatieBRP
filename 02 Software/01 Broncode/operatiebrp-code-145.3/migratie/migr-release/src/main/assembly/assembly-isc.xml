<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>isc</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/isc</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/routering-sql/sql</directory>
            <outputDirectory>/sql/routering</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/naarvoisc-sql/sql</directory>
            <outputDirectory>/sql/naarvoisc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/isc-sql/sql</directory>
            <outputDirectory>/sql/isc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/voisc-sql/sql</directory>
            <outputDirectory>/sql/voisc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/binaries</directory>
            <outputDirectory>/bin</outputDirectory>
			<includes>
                <include>migr-routering-runtime.zip</include>
				<include>migr-synchronisatie-runtime.zip</include>
				<include>migr-voisc-runtime.zip</include>
                <include>migr-isc-runtime.zip</include>
                <include>migr-init-naarvoisc.zip</include>
                <include>migr-isc-console-webapp.war</include>
			</includes>
        </fileSet>
        <fileSet>
            <directory>target/sources</directory>
            <outputDirectory>/src</outputDirectory>
			<includes>
				<include>migr-bericht-*.</include>
				<include>migr-conversie-*.jar</include>
				<include>migr-isc-*.jar</include>
				<include>migr-register-*.jar</include>
				<include>migr-routering-*.jar</include>
				<include>migr-synchronisatie-*.jar</include>
				<include>migr-util-*.jar</include>
				<include>migr-voisc-*.jar</include>
			</includes>
        </fileSet>
        <fileSet>
            <directory>target/javadoc</directory>
            <outputDirectory>/javadoc</outputDirectory>
			<includes>
				<include>migr-bericht-*.</include>
				<include>migr-conversie-*.jar</include>
				<include>migr-isc-*.jar</include>
				<include>migr-register-*.jar</include>
				<include>migr-routering-*.jar</include>
				<include>migr-synchronisatie-*.jar</include>
				<include>migr-util-*.jar</include>
				<include>migr-voisc-*.jar</include>
			</includes>
        </fileSet>
	</fileSets>
</assembly>
