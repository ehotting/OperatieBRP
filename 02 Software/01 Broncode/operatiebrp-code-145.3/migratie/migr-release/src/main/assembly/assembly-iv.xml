
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>initielevulling</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/iv</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/iv-sql/sql</directory>
            <outputDirectory>/sql/iv</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/binaries</directory>
            <outputDirectory>/bin</outputDirectory>
			<includes>
                <include>migr-init-logging-runtime.zip</include>
                <include>migr-init-naarbrp.zip</include>
                <include>migr-init-naarlo3.zip</include>
				<include>migr-synchronisatie-runtime.zip</include>
			</includes>
        </fileSet>
        <fileSet>
            <directory>target/sources</directory>
            <outputDirectory>/src</outputDirectory>
			<includes>
				<include>migr-bericht-*.</include>
				<include>migr-conversie-*.jar</include>
				<include>migr-init-*.jar</include>
				<include>migr-synchronisatie-*.jar</include>
				<include>migr-util-*.jar</include>
			</includes>
        </fileSet>
        <fileSet>
            <directory>target/javadoc</directory>
            <outputDirectory>/javadoc</outputDirectory>
			<includes>
				<include>migr-bericht-*.</include>
				<include>migr-conversie-*.jar</include>
				<include>migr-init-*.jar</include>
				<include>migr-synchronisatie-*.jar</include>
				<include>migr-util-*.jar</include>
			</includes>
        </fileSet>
    </fileSets>	
</assembly>
