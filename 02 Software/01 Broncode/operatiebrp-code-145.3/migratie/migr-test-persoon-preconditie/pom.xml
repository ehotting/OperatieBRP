<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.migratiebrp</groupId>
        <artifactId>migr-test-persoon</artifactId>
        <version>145.3</version>
        <relativePath>../migr-test-persoon</relativePath>
    </parent>

    <artifactId>migr-test-persoon-preconditie</artifactId>
    <name>Migr - Test - Persoon - Preconditie</name>

    <properties>
        <resource.dir>local</resource.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-test-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-model</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-regels</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
            <type>test-jar</type>
        </dependency>

        <!-- hsqldb -->
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>migr-test-preconditie</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/assembly/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/non-packaged-resources/${resource.dir}</directory>
            </testResource>
        </testResources>
    </build>

    <profiles>
        <profile>
            <id>default-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <resource.dir>local</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/RegressieTest.java</exclude>
                                <exclude>**/ParameterizedTest.java</exclude>
                                <exclude>**/PreconditieTest.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie-coverage</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>preconditie</id>
            <properties>
                <resource.dir>remote</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>PreconditieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

