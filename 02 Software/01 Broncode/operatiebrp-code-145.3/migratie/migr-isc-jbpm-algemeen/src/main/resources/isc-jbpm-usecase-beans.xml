<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Actions voor algemene foutafhandeling -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.foutafhandeling"/>
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.uc808"/>

    <!-- Actions voor voisc-control -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.voisccontrol"/>

    <!-- Algemeen gebruikte actions (oa partijregister) -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.actions"/>

    <!-- Utility beans (gebruikt in EL) -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.util"/>

    <!-- DAO voor configuratie -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.configuratie"/>

    <!-- DAO voor berichten -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.berichten"/>

    <!-- DAO voor rapportage -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.rapportage"/>

    <!-- DAO voor verzendende instantie -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.verzender"/>

    <!-- DAO voor gerelateerde informatie -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.gerelateerd"/>

    <!-- DAO -->
    <context:component-scan base-package="nl.bzk.migratiebrp.isc.jbpm.common.dao"/>

</beans>
