<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
    <artifactId>migr-isc-deploy-elk</artifactId>
    <name>Migr - ISC - Deploy - ELK</name>
    <packaging>pom</packaging>
	<parent>
		<groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
		<artifactId>migr-isc-deploy-properties</artifactId>
		<version>1.0</version>
		<relativePath>./deploy-properties.pom.xml</relativePath>
	</parent>
	
	<properties>
		<!-- Ant plugin config -->
		<ant.build.file>elk.build.xml</ant.build.file>
	</properties>

	<profiles>
		<profile>
			<id>install</id>
			<activation>
				<property>
					<name>deploy.target</name>
					<value>install</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-single</id>
								<configuration>
									<skip>true</skip>
								</configuration>
							</execution>
							<execution>
								<id>copy</id>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<outputDirectory>${copy.output}</outputDirectory>
									<artifactItems>
										<artifactItem>
											<groupId>elastic</groupId>
											<artifactId>elasticsearch</artifactId>
											<version>${elasticsearch.version}</version>
											<type>zip</type>
											<destFileName>elasticsearch.zip</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>elastic</groupId>
											<artifactId>kibana</artifactId>
											<version>${kibana.version}</version>
											<classifier>x64</classifier>
											<type>tar.gz</type>
											<destFileName>kibana.tar.gz</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>elastic</groupId>
											<artifactId>logstash</artifactId>
											<version>${logstash.version}</version>
											<type>zip</type>										
											<destFileName>logstash.zip</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>elastic.logstash.plugins</groupId>
											<artifactId>log4j2</artifactId>
											<version>5.1</version>
											<type>zip</type>
											<destFileName>log4j2.zip</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>	
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>system-properties-single</id>
								<configuration>
									<properties>
										<property>
											<name>application.source</name>
											<value>${application.bin.source}</value>
										</property>
										<property>
											<name>application.file.elasticsearch</name>
											<value>elasticsearch.zip</value>
										</property>
										<property>
											<name>application.file.kibana</name>
											<value>kibana.tar.gz</value>
										</property>
										<property>
											<name>application.file.logstash</name>
											<value>logstash.zip</value>
										</property>
										<property>
											<name>application.file.logstash.plugin</name>
											<value>log4j2.zip</value>
										</property>
									</properties>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>install</id>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
