<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
    <artifactId>migr-isc-deploy-ggo-as</artifactId>
    <name>Migr - ISC - Deploy - Deploy GGO AS</name>
	<packaging>pom</packaging>
	<parent>
		<groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
		<artifactId>migr-isc-deploy-properties</artifactId>
		<version>1.0</version>
		<relativePath>./deploy-properties.pom.xml</relativePath>
	</parent>
	
	<properties>
		<!-- Ant plugin config -->
		<ant.build.file>ggo-as.build.xml</ant.build.file>
		<!-- Copy plugin config (copy-single execution) -->
		<copy.groupId>nl.bzk.migratiebrp</copy.groupId>
		<copy.artifactId>migr-ggo-viewer</copy.artifactId>
		<copy.type>war</copy.type>
		<copy.version>${migratie.ggo.version}</copy.version>
	</properties>

	<profiles>
		<profile>
			<id>install</id>
			<activation>
				<property>
					<name>deploy.target</name>
					<value>install</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-single</id>
							</execution>
							<execution>
								<id>copy-tomcat</id>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<outputDirectory>target/tomcat</outputDirectory>
									<artifactItems>
										<artifactItem>
                                            <groupId>org.apache.tomcat</groupId>
                                            <artifactId>tomcat</artifactId>
											<version>${tomcat.version}</version>
											<type>zip</type>
											<destFileName>apache-tomcat.zip</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>							
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>system-properties-single</id>
								<configuration>
									<properties>
										<property>
											<name>application.war.source</name>
											<value>${application.bin.source}</value>
										</property>
										<property>
											<name>application.war.file</name>
											<value>${application.bin.file}</value>
										</property>
										<property>
											<name>application.bin.source</name>
											<value>../target/tomcat</value>
										</property>
										<property>
											<name>application.bin.file</name>
											<value>apache-tomcat.zip</value>
										</property>
									</properties>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>install</id>
					</execution>
				</executions>
			</plugin>
		</plugins>		
	</build>
</project>
