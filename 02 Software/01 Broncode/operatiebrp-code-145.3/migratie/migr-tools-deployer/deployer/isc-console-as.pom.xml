<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
    <artifactId>migr-isc-deploy-isc-as</artifactId>
    <name>Migr - ISC - Deploy - Deploy ISC AS</name>
    <version>1.0</version>
    <packaging>pom</packaging>
    <parent>
        <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
        <artifactId>migr-isc-deploy-properties</artifactId>
        <version>1.0</version>
        <relativePath>./deploy-properties.pom.xml</relativePath>
    </parent>

    <properties>
        <!-- Ant plugin config -->
        <ant.build.file>isc-console.build.xml</ant.build.file>
        <!-- Copy plugin config (copy-single execution) -->
        <copy.groupId>nl.bzk.migratiebrp</copy.groupId>
        <copy.artifactId>migr-isc-console-webapp</copy.artifactId>
        <copy.type>war</copy.type>
        <copy.version>${migratie.isc-console.version}</copy.version>
    </properties>

    <profiles>
        <profile>
            <id>install</id>
            <activation>
                <property>
                    <name>deploy.target</name>
                    <value>install</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-alg-webapp-jmx</id>
                                <phase>process-sources</phase>
                            </execution>
                            <execution>
                                <id>copy-single</id>
                            </execution>
                            <execution>
                                <id>copy-tomcat</id>
                                <phase>process-sources</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>system-properties-single</id>
                                <configuration>
                                    <properties>
                                        <property>
                                            <name>application.bin.source</name>
                                            <value>../target/tomcat/</value>
                                        </property>
                                        <property>
                                            <name>application.bin.file</name>
                                            <value>apache-tomcat.zip</value>
                                        </property>

                                        <property>
                                            <name>application.jmx.source</name>
                                            <value>${alg.webapp.jmx.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.jmx.file</name>
                                            <value>${alg.webapp.jmx.bin.file}</value>
                                        </property>

                                        <property>
                                            <name>application.console.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.console.file</name>
                                            <value>${application.bin.file}</value>
                                        </property>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
