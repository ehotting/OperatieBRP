<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
    <artifactId>migr-isc-deploy-brp-as</artifactId>
    <name>Migr - ISC - Deploy - Deploy BRP AS</name>
    <packaging>pom</packaging>

    <parent>
        <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
        <artifactId>migr-isc-deploy-properties</artifactId>
        <version>1.0</version>
        <relativePath>./deploy-properties.pom.xml</relativePath>
    </parent>

    <properties>
        <ant.build.file>brp-as.build.xml</ant.build.file>
    </properties>

    <profiles>
        <profile>
            <id>install</id>
            <activation>
                <property>
                    <name>deploy.target</name>
                    <value>install</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-alg-webapp-jmx</id>
                                <phase>process-sources</phase>
                            </execution>
                            <execution>
                                <id>copy-single</id>
                                <phase>none</phase>
                            </execution>
                            <execution>
                                <id>copy</id>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${copy.output}</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-afnemerindicatie-gba
                                            </artifactId>
                                            <type>war</type>
                                            <version>${brp.afnemerindicatie.version}</version>
                                            <destFileName>brp-delivery-afnemerindicatie-gba.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>archivering-delivery-archivering
                                            </artifactId>
                                            <type>war</type>
                                            <version>${brp.archivering.version}</version>
                                            <destFileName>brp-delivery-archivering.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-bevraging-gba</artifactId>
                                            <type>war</type>
                                            <version>${brp.bevraging.version}</version>
                                            <destFileName>brp-delivery-bevraging-gba.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp.bijhouding</groupId>
                                            <artifactId>brp-bijhouding-delivery-ws</artifactId>
                                            <type>war</type>
                                            <version>${brp.bijhouding.version}</version>
                                            <destFileName>brp-delivery-bijhouding.war</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp.bijhouding</groupId>
                                            <artifactId>brp-bijhouding-delivery-gba</artifactId>
                                            <type>war</type>
                                            <version>${brp.bijhouding.version}</version>
                                            <destFileName>brp-delivery-bijhouding-gba.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-bevraging</artifactId>
                                            <type>war</type>
                                            <version>${brp.bevraging.version}</version>
                                            <destFileName>brp-delivery-bevraging.war</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-zip-brp-mutatielevering
                                            </artifactId>
                                            <type>zip</type>
                                            <version>${brp.mutatielevering.version}</version>
                                            <destFileName>brp-mutatielevering.zip</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-protocollering</artifactId>
                                            <type>war</type>
                                            <version>${brp.protocollering.version}</version>
                                            <destFileName>brp-delivery-protocollering.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-verzending</artifactId>
                                            <type>war</type>
                                            <version>${brp.verzending.version}</version>
                                            <destFileName>brp-delivery-verzending.war</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-vrijbericht</artifactId>
                                            <type>war</type>
                                            <version>${brp.vrijbericht.version}</version>
                                            <destFileName>brp-delivery-vrijbericht.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-afnemervoorbeeld</artifactId>
                                            <type>war</type>
                                            <version>${brp.afnemer-voorbeeld.version}</version>
                                            <destFileName>brp-delivery-afnemervoorbeeld.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>brp-delivery-ah-publicatie</artifactId>
                                            <type>war</type>
                                            <version>${brp.mutatielevering.version}</version>
                                            <destFileName>brp-delivery-ah-publicatie.war
                                            </destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp.beheer</groupId>
                                            <artifactId>brp-beheer-api</artifactId>
                                            <type>war</type>
                                            <version>${brp.beheer.version}</version>
                                            <destFileName>brp-beheer.war</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-tomcat</id>
                                <phase>process-sources</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>system-properties-single</id>
                                <configuration>
                                    <properties>
                                        <property>
                                            <name>application.bin.source</name>
                                            <value>../target/tomcat</value>
                                        </property>
                                        <property>
                                            <name>application.bin.file</name>
                                            <value>apache-tomcat.zip</value>
                                        </property>

                                        <property>
                                            <name>application.jmx.source</name>
                                            <value>${alg.webapp.jmx.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.jmx.file</name>
                                            <value>${alg.webapp.jmx.bin.file}</value>
                                        </property>

                                        <property>
                                            <name>application.afnemerindicatie-gba.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.afnemerindicatie-gba.war.file</name>
                                            <value>brp-delivery-afnemerindicatie-gba.war</value>
                                        </property>
                                        <property>
                                            <name>application.archivering.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.archivering.war.file</name>
                                            <value>brp-delivery-archivering.war</value>
                                        </property>
                                        <property>
                                            <name>application.bevraging-gba.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.bevraging-gba.war.file</name>
                                            <value>brp-delivery-bevraging-gba.war</value>
                                        </property>
                                        <property>
                                            <name>application.bijhouding-gba.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.bijhouding-gba.war.file</name>
                                            <value>brp-delivery-bijhouding-gba.war</value>
                                        </property>
                                        <property>
                                            <name>application.bijhouding.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.bijhouding.war.file</name>
                                            <value>brp-delivery-bijhouding.war</value>
                                        </property>
                                        <property>
                                            <name>application.bevraging.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.bevraging.war.file</name>
                                            <value>brp-delivery-bevraging.war</value>
                                        </property>
                                        <property>
                                            <name>application.mutatielevering.zip.source
                                            </name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.mutatielevering.zip.file</name>
                                            <value>brp-mutatielevering.zip</value>
                                        </property>
                                        <property>
                                            <name>application.admhnd.publicatie.war.file</name>
                                            <value>brp-delivery-ah-publicatie.war</value>
                                        </property>
                                        <property>
                                            <name>application.admhnd.publicatie.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.kennisgevingverstuurder.war.source
                                            </name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.kennisgevingverstuurder.war.file
                                            </name>
                                            <value>brp-delivery-verzending.war</value>
                                        </property>
                                        <property>
                                            <name>application.protocollering.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.protocollering.war.file</name>
                                            <value>brp-delivery-protocollering.war</value>
                                        </property>
                                        <property>
                                            <name>application.vrijbericht.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.vrijbericht.war.file</name>
                                            <value>brp-delivery-vrijbericht.war</value>
                                        </property>
                                        <property>
                                            <name>application.afnemer.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.afnemer.war.file</name>
                                            <value>brp-delivery-afnemervoorbeeld.war</value>
                                        </property>
                                        <property>
                                            <name>application.beheer.war.source</name>
                                            <value>${application.bin.source}</value>
                                        </property>
                                        <property>
                                            <name>application.beheer.war.file</name>
                                            <value>brp-beheer.war</value>
                                        </property>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
