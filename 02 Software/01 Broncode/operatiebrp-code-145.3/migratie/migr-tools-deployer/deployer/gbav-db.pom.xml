<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
    <artifactId>migr-isc-deploy-gba-iv-db</artifactId>
    <name>Migr - ISC - Deploy - Deploy GBA IV DB</name>
    <packaging>pom</packaging>
    <parent>
        <groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
        <artifactId>migr-isc-deploy-properties</artifactId>
        <version>1.0</version>
        <relativePath>./deploy-properties.pom.xml</relativePath>
    </parent>

    <properties>
        <!-- Ant plugin config -->
        <ant.build.file>db.build.xml</ant.build.file>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-single</id>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-ggo-sql</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${copy.output}</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>nl.bzk.migratiebrp</groupId>
                                    <artifactId>migr-tools-proefsynchronisatie</artifactId>
                                    <version>${migratie.tools-proefsynchronisatie-db.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>nl.bzk.migratiebrp</groupId>
                                    <artifactId>migr-init-naarbrp</artifactId>
                                    <version>${migratie.gbav-db.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <includes>**/*.sql</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>system-properties-single</id>
                        <goals>
                            <goal>set-system-properties</goal>
                        </goals>
                        <configuration>
                            <properties>
                                <property>
                                    <name>application.install.source</name>
                                    <value>${application.bin.source}</value>
                                </property>
                                <property>
                                    <name>application.install.file</name>
                                    <value>
                                        sql/createInitVullingTables.sql,sql/create_lo3.sql,sql/init_lo3_database.sql
                                    </value>
                                </property>
                                <property>
                                    <name>application.deinstall.source</name>
                                    <value>${application.bin.source}</value>
                                </property>
                                <property>
                                    <name>application.deinstall.file</name>
                                    <value>sql/drop_lo3.sql</value>
                                </property>
                                <property>
                                    <name>application.clean.source</name>
                                    <value>${application.bin.source}</value>
                                </property>
                                <property>
                                    <name>application.clean.file</name>
                                    <value>sql/truncate_lo3.sql</value>
                                </property>
                            </properties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
