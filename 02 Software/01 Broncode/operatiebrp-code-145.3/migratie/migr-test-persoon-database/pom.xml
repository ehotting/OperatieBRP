<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.migratiebrp</groupId>
        <artifactId>migr-test-persoon</artifactId>
        <version>145.3</version>
        <relativePath>../migr-test-persoon</relativePath>
    </parent>

    <artifactId>migr-test-persoon-database</artifactId>
    <name>Migr - Test - Persoon - Conversie LO3 naar BRP DB controle</name>

    <properties>
        <resource.dir>local</resource.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.algemeenbrp</groupId>
            <artifactId>alg-test-dal</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-test-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-model</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-conversie-regels</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
            <type>test-jar</type>
        </dependency>

        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>deltabepaling</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/non-packaged-resources/${resource.dir}</directory>
            </testResource>
        </testResources>
    </build>

    <profiles>
        <profile>
            <id>default-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/DbConversieTest.java</exclude>
                                <exclude>**/DeltaBepalenTest.java</exclude>
                                <exclude>**/CoverageTest.java</exclude>
                                <exclude>**/RelaterenTest.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>liquibase</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>read-project-properties</goal>
                                </goals>
                                <configuration>
                                    <files>
                                        <file>src/test/non-packaged-resources/${resource.dir}/datasource.properties</file>
                                    </files>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <driver>org.postgresql.Driver</driver>
                            <url>jdbc:postgresql://${database.host}/${database.name}</url>
                            <username>${database.username}</username>
                            <password>${database.password}</password>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>nl.bzk.brp</groupId>
                                <artifactId>brp-database</artifactId>
                                <version>${database.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.postgresql</groupId>
                                <artifactId>postgresql</artifactId>
                                <version>${postgresql.version}</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>create-db-brp</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                                <configuration>
                                    <dropFirst>true</dropFirst>
                                    <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                                    <changeLogFile>liquibase/changeset/brp-databases.xml</changeLogFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie-coverage</id>
            <properties>
                <resource.dir>deltabepalen</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/DbConversieTest.java</exclude>
                                <!--<exclude>**/CoverageTest.java</exclude>-->
                                <exclude>**/DeltaBepalenTest.java</exclude>
                                <exclude>**/RelaterenTest.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>relateren</id>
            <properties>
                <resource.dir>relateren</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RelaterenTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>deltabepalen</id>
            <properties>
                <resource.dir>deltabepalen</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <redirectTestOutputToFile>false</redirectTestOutputToFile>
                            <test>DeltaBepalenTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>conversie</id>
            <properties>
                <resource.dir>remote</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>DbConversieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
