<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="" name="uc1003-plaatsen">

    <!--  -->
    <!--  -->
    <!-- START -->
    <!--  -->
    <!--  -->

    <start-state name="Start (ontvang Ap01)">
        <transition to="O-1. Loggen start proces">
            <script>
                <expression>
                    functioneleStap="uc1003.start.stap";
                </expression>
                <variable name='functioneleStap' access='write'/>
            </script>
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>input</value>
                    </entry>
                </parameters>
            </action>
        </transition>
    </start-state>

    <node name="O-1. Loggen start proces">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                startProcesInstantieAction
            </bean>
        </action>
        <transition to="CONTROLEREN AFNEMER" name="log start"></transition>
    </node>

    <!--  -->
    <!--  -->
    <!-- CONTROLEREN AFNEMER -->
    <!--  -->
    <!--  -->

    <node name="CONTROLEREN AFNEMER">
        <transition to="I-5. Controleer afnemer">
            <script>
                <expression>
                    functioneleStap="uc1003.afnemer.stap";
                </expression>
                <variable name='functioneleStap' access='write'/>
            </script>
        </transition>
    </node>

    <node name="I-5. Controleer afnemer">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003ControleerAfnemerAction
            </bean>
        </action>
        <transition to="CONTROLEREN PERSOON"></transition>
        <transition to="II-1. Foutafhandeling (controleren afnemer)"
                    name="1d. Ongeldige afnemer (beeindigen)">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.afnemer.fout";
                    foutafhandelingFoutmelding=actieFoutmelding;

                    foutafhandelingIndicatieBeheerder=false;
                    restart="af01";
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("af01", "Proces be&#235;indigen", false, false);
                </expression>
                <variable name='actieFoutmelding' access='read'/>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='restart' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </node>

    <process-state name="II-1. Foutafhandeling (controleren afnemer)">
        <sub-process name="foutafhandeling" binding="late"></sub-process>
        <variable access="read" mapped-name="lo3Bericht" name="input"></variable>
        <variable access="read" mapped-name="bronPartijCode" name="bronPartijCode"></variable>
        <variable access="read" mapped-name="doelPartijCode" name="doelPartijCode"></variable>
        <variable access="read" mapped-name="functioneleStap" name="functioneleStap"></variable>
        <variable access="read" mapped-name="fout" name="foutafhandelingFout"></variable>
        <variable access="read" mapped-name="foutmelding"
                  name="foutafhandelingFoutmelding"></variable>
        <variable access="read" mapped-name="indicatieBeheerder"
                  name="foutafhandelingIndicatieBeheerder"></variable>
        <variable access="read,write" mapped-name="restart" name="restart"></variable>
        <variable access="read" mapped-name="foutafhandelingPaden"
                  name="foutafhandelingPaden"></variable>
        <transition to="II-2. Keuze (controleren afnemer)"></transition>
    </process-state>

    <decision name="II-2. Keuze (controleren afnemer)">
        <transition to="X-1. Maak Af01 bericht" name="2b. Beeindigen (Af01)"></transition>
    </decision>

    <!--  -->
    <!--  -->
    <!-- CONTROLEREN PERSOON -->
    <!--  -->
    <!--  -->

    <node name="CONTROLEREN PERSOON">
        <transition to="III-1. Maak zoek persoon bericht">
            <script>
                <expression>
                    functioneleStap="uc1003.zoek.stap";
                </expression>
                <variable name='functioneleStap' access='write'/>
            </script>
        </transition>
    </node>

    <node name="III-1. Maak zoek persoon bericht">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003MaakAdHocZoekPersoonAction
            </bean>
        </action>
        <transition to="III-2. Zoek persoon">
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>adHocZoekPersoonVerzoek</value>
                    </entry>
                </parameters>
            </action>
        </transition>
    </node>

    <node name="III-2. Zoek persoon">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.actionhandler.EsbActionHandler">
            <esbServiceName>
                Sync-Outbound
            </esbServiceName>
            <bpmToEsbVars>
                <mapping bpm="adHocZoekPersoonVerzoek" esb="BODY_CONTENT"></mapping>
            </bpmToEsbVars>
            <esbToBpmVars>
                <mapping bpm="syncBericht" esb="iscBerichtId"></mapping>
                <mapping bpm="syncBerichtType" esb="iscBerichtType"></mapping>
            </esbToBpmVars>
        </action>
        <transition to="III-4. Bepaal antwoord zoek persoon">
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>syncBericht</value>
                    </entry>
                </parameters>
            </action>
        </transition>
        <transition to="IV-1. Foutafhandeling (controleren persoon)" name="afbreken">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.zoek.afgebroken";
                    foutafhandelingFoutmelding=null;

                    foutafhandelingIndicatieBeheerder=true;
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("end", "Proces be&#235;indigen (Pf03)", true, false);
                    foutafhandelingPaden.put("endWithoutPf03", "Proces be&#235;indigen (zonder Pf03)", false, false);
                    foutafhandelingPaden.put("restartAtControlerenPersoon", "Opnieuw proberen persoon te zoeken", false, false);
                </expression>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </node>

    <decision name="III-4. Bepaal antwoord zoek persoon">
        <transition to="III-5. Controleer persoon">
            <condition expression="#{syncBerichtType == 'adHocZoekPersoonAntwoord'}"></condition>
            <script>
                <expression>
                    adHocZoekPersoonAntwoord=syncBericht;
                </expression>
                <variable name='adHocZoekPersoonAntwoord' access='write'/>
                <variable name='syncBericht' access='read'/>
            </script>
        </transition>
        <transition to="IV-1. Foutafhandeling (controleren persoon)" name="3b. Technische fout">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.zoek.foutiefbericht";
                    foutafhandelingTechnischeFout=true;
                    foutafhandelingFoutmelding=syncBerichtType + " is niet een verwacht bericht.";

                    foutafhandelingIndicatieBeheerder=true;
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("end", "Proces be&#235;indigen (Pf03)", true, false);
                    foutafhandelingPaden.put("endWithoutPf03", "Proces be&#235;indigen (zonder Pf03)", false, false);
                    foutafhandelingPaden.put("restartAtControlerenPersoon", "Opnieuw proberen persoon te zoeken", false, false);
                </expression>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingTechnischeFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='syncBerichtType' access='read'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </decision>

    <node name="III-5. Controleer persoon">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003ControleerPersoonAction
            </bean>
        </action>
        <transition to="PLAATSEN AFNEMERSINDICATIE"></transition>
        <transition to="IV-1. Foutafhandeling (controleren persoon)"
                    name="3d. Controle persoon mislukt (beeindigen)">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.zoek.fout";
                    foutafhandelingFoutmelding=actieFoutmelding;

                    foutafhandelingIndicatieBeheerder=false;
                    restart="af01";
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("af01", "Proces be&#235;indigen", false, false);
                </expression>
                <variable name='actieFoutmelding' access='read'/>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='restart' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </node>

    <process-state name="IV-1. Foutafhandeling (controleren persoon)">
        <sub-process name="foutafhandeling" binding="late"></sub-process>
        <variable access="read" mapped-name="lo3Bericht" name="input"></variable>
        <variable access="read" mapped-name="bronPartijCode" name="bronPartijCode"></variable>
        <variable access="read" mapped-name="doelPartijCode" name="doelPartijCode"></variable>
        <variable access="read" mapped-name="functioneleStap" name="functioneleStap"></variable>
        <variable access="read" mapped-name="fout" name="foutafhandelingFout"></variable>
        <variable access="read" mapped-name="foutmelding"
                  name="foutafhandelingFoutmelding"></variable>
        <variable access="read" mapped-name="indicatieBeheerder"
                  name="foutafhandelingIndicatieBeheerder"></variable>
        <variable access="read,write" mapped-name="restart" name="restart"></variable>
        <variable access="read" mapped-name="foutafhandelingPaden"
                  name="foutafhandelingPaden"></variable>
        <transition to="IV-2. Keuze (controleren persoon)"></transition>
    </process-state>

    <decision name="IV-2. Keuze (controleren persoon)">
        <transition to="O-2. Loggen einde proces" name="4c. Beeindigen">
            <condition expression="#{restart == 'end' || restart == 'endWithoutPf03'}"></condition>
        </transition>
        <transition to="X-1. Maak Af01 bericht" name="4b. Beeindigen (Af01)">
            <condition expression="#{restart == 'af01'}"></condition>
        </transition>
        <transition to="CONTROLEREN PERSOON" name="4a. Opnieuw controleren">
            <condition expression="#{restart == 'restartAtControlerenPersoon'}"></condition>
        </transition>
    </decision>

    <!--  -->
    <!--  -->
    <!-- PLAATSEN AFNEMERSINDICATIE -->
    <!--  -->
    <!--  -->

    <node name="PLAATSEN AFNEMERSINDICATIE">
        <transition to="VII-1. Maak plaatsen afnemersindicatie bericht">
            <script>
                <expression>
                    functioneleStap="uc1003.plaatsen.stap";
                </expression>
                <variable name='functioneleStap' access='write'/>
            </script>
        </transition>
    </node>

    <node name="VII-1. Maak plaatsen afnemersindicatie bericht">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003MaakPlaatsenAfnemersindicatieAction
            </bean>
        </action>
        <transition to="VII-2. Plaatsen afnemersindicatie">
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>plaatsenAfnIndBericht</value>
                    </entry>
                </parameters>
            </action>
        </transition>
    </node>

    <node name="VII-2. Plaatsen afnemersindicatie">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.actionhandler.EsbActionHandler">
            <esbServiceName>
                Sync-Outbound
            </esbServiceName>
            <bpmToEsbVars>
                <mapping bpm="plaatsenAfnIndBericht" esb="BODY_CONTENT"></mapping>
            </bpmToEsbVars>
            <esbToBpmVars>
                <mapping bpm="syncBericht" esb="iscBerichtId"></mapping>
                <mapping bpm="syncBerichtType" esb="iscBerichtType"></mapping>
            </esbToBpmVars>
        </action>
        <transition to="VII-4. Bepaal antwoord op plaatsen afnemersindicatie">
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>syncBericht</value>
                    </entry>
                </parameters>
            </action>
        </transition>
        <transition to="VIII-1. Foutafhandeling (plaatsen)" name="afbreken">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.plaatsen.afgebroken";
                    foutafhandelingFoutmelding=null;

                    foutafhandelingIndicatieBeheerder=true;
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("end", "Proces be&#235;indigen (Pf03)", true, false);
                    foutafhandelingPaden.put("endWithoutPf03", "Proces be&#235;indigen (zonder Pf03)", false, false);
                    foutafhandelingPaden.put("restartAtPlaatsen", "Opnieuw proberen afnemersindicatie te plaatsen", false, false);
                </expression>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </node>

    <decision name="VII-4. Bepaal antwoord op plaatsen afnemersindicatie">
        <transition to="VII-5. Controleer antwoord op plaatsen afnemersindicatie">
            <condition
                    expression="#{syncBerichtType == 'VerwerkAfnemersindicatieAntwoord'}"></condition>
            <script>
                <expression>
                    plaatsenAfnemersindicatieAntwoordBericht=syncBericht;
                </expression>
                <variable name='plaatsenAfnemersindicatieAntwoordBericht' access='write'/>
                <variable name='syncBericht' access='read'/>
            </script>
        </transition>
        <transition to="VIII-1. Foutafhandeling (plaatsen)" name="7b. Technische fout">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.plaatsen.foutiefbericht";
                    foutafhandelingFoutmelding=syncBerichtType + " is niet een verwacht bericht.";

                    foutafhandelingIndicatieBeheerder=true;
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("end", "Proces be&#235;indigen (Pf03)", true, false);
                    foutafhandelingPaden.put("endWithoutPf03", "Proces be&#235;indigen (zonder Pf03)", false, false);
                    foutafhandelingPaden.put("restartAtPlaatsen", "Opnieuw proberen afnemersindicatie te plaatsen", false, false);
                </expression>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='syncBerichtType' access='read'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </decision>

    <node name="VII-5. Controleer antwoord op plaatsen afnemersindicatie">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003ControleerPlaatsenAfnIndAntwoordAction
            </bean>
        </action>
        <transition to="O-2. Loggen einde proces"></transition>
        <transition to="VIII-1. Foutafhandeling (plaatsen)" name="7d. Niet geplaatst (beeindigen)">
            <script>
                <expression>
                    foutafhandelingFout="uc1003.plaatsen.fout";
                    foutafhandelingFoutmelding=actieFoutmelding;

                    foutafhandelingIndicatieBeheerder=false;
                    restart="af01";
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("af01", "Proces be&#235;indigen", false, false);
                </expression>
                <variable name='actieFoutmelding' access='read'/>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='restart' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
    </node>

    <process-state name="VIII-1. Foutafhandeling (plaatsen)">
        <sub-process name="foutafhandeling" binding="late"></sub-process>
        <variable access="read" mapped-name="lo3Bericht" name="input"></variable>
        <variable access="read" mapped-name="bronPartijCode" name="bronPartijCode"></variable>
        <variable access="read" mapped-name="doelPartijCode" name="doelPartijCode"></variable>
        <variable access="read" mapped-name="functioneleStap" name="functioneleStap"></variable>
        <variable access="read" mapped-name="fout" name="foutafhandelingFout"></variable>
        <variable access="read" mapped-name="foutmelding"
                  name="foutafhandelingFoutmelding"></variable>
        <variable access="read" mapped-name="indicatieBeheerder"
                  name="foutafhandelingIndicatieBeheerder"></variable>
        <variable access="read,write" mapped-name="restart" name="restart"></variable>
        <variable access="read" mapped-name="foutafhandelingPaden"
                  name="foutafhandelingPaden"></variable>
        <transition to="VIII-2. Keuze (plaatsen)"></transition>
    </process-state>

    <decision name="VIII-2. Keuze (plaatsen)">
        <transition to="O-2. Loggen einde proces" name="8c. Beeindigen">
            <condition expression="#{restart == 'end' || restart == 'endWithoutPf03'}"></condition>
        </transition>
        <transition to="X-1. Maak Af01 bericht" name="8b. Beeindigen (Af01)">
            <condition expression="#{restart == 'af01'}"></condition>
        </transition>
        <transition to="PLAATSEN AFNEMERSINDICATIE" name="8a. Opnieuw plaatsen afnemersindicatie">
            <condition expression="#{restart == 'restartAtPlaatsen'}"></condition>
        </transition>
    </decision>

    <!--  -->
    <!--  -->
    <!-- AF01 BERICHT -->
    <!--  -->
    <!--  -->

    <node name="X-1. Maak Af01 bericht">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                uc1003MaakAf01BerichtAction
            </bean>
        </action>
        <transition to="X-2. Keuze (X)" name="Af01 versturen (notify)">
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler"
                    config-type="bean">
                <bean>registreerGerelateerdeInformatieAction</bean>
                <parameters>
                    <entry>
                        <key>berichtIdVariabele</key>
                        <value>af01Bericht</value>
                    </entry>
                </parameters>
            </action>
            <action class="nl.bzk.migratiebrp.isc.jbpm.common.actionhandler.EsbActionHandler">
                <esbServiceName>
                    VOISC-Outbound
                </esbServiceName>
                <bpmToEsbVars>
                    <mapping bpm="af01Bericht" esb="BODY_CONTENT"></mapping>
                </bpmToEsbVars>
            </action>
        </transition>
    </node>

    <decision name="X-2. Keuze (X)">
        <transition to="X-3. Foutafhandeling (autorisatie)" name="10a. Autorisatie fout">
            <condition expression="#{af0xFoutreden == 'X'}"></condition>
            <script>
                <expression>
                    foutafhandelingFout="uc1003.autorisatie.fout";
                    foutafhandelingFoutmelding=actieFoutmelding;

                    foutafhandelingIndicatieBeheerder=true;
                    restart="end";
                    foutafhandelingPaden=new
                    nl.bzk.migratiebrp.isc.jbpm.common.jsf.FoutafhandelingPaden();
                    foutafhandelingPaden.put("end", "Proces be&#235;indigen", false, false);
                </expression>
                <variable name='actieFoutmelding' access='read'/>
                <variable name='foutafhandelingFout' access='write'/>
                <variable name='foutafhandelingFoutmelding' access='write'/>
                <variable name='foutafhandelingIndicatieBeheerder' access='write'/>
                <variable name='restart' access='write'/>
                <variable name='foutafhandelingPaden' access='write'/>
            </script>
        </transition>
        <transition to="O-2. Loggen einde proces" name="10b. Overig"></transition>
    </decision>

    <process-state name="X-3. Foutafhandeling (autorisatie)">
        <sub-process name="foutafhandeling" binding="late"></sub-process>
        <variable access="read" mapped-name="lo3Bericht" name="input"></variable>
        <variable access="read" mapped-name="bronPartijCode" name="bronPartijCode"></variable>
        <variable access="read" mapped-name="doelPartijCode" name="doelPartijCode"></variable>
        <variable access="read" mapped-name="functioneleStap" name="functioneleStap"></variable>
        <variable access="read" mapped-name="fout" name="foutafhandelingFout"></variable>
        <variable access="read" mapped-name="foutmelding"
                  name="foutafhandelingFoutmelding"></variable>
        <variable access="read" mapped-name="indicatieBeheerder"
                  name="foutafhandelingIndicatieBeheerder"></variable>
        <variable access="read,write" mapped-name="restart" name="restart"></variable>
        <variable access="read" mapped-name="foutafhandelingPaden"
                  name="foutafhandelingPaden"></variable>
        <transition to="O-2. Loggen einde proces"></transition>
    </process-state>

    <!--  -->
    <!--  -->
    <!-- Einde -->
    <!--  -->
    <!--  -->

    <node name="O-2. Loggen einde proces">
        <action class="nl.bzk.migratiebrp.isc.jbpm.common.spring.SpringActionHandler">
            <bean>
                beeindigProcesInstantieAction
            </bean>
        </action>
        <transition to="Afgerond"></transition>
    </node>

    <end-state name="Afgerond">
    </end-state>

    <exception-handler>
        <action name="exception-handler"
                class="nl.bzk.migratiebrp.isc.jbpm.common.ExceptionLogger"/>
    </exception-handler>
