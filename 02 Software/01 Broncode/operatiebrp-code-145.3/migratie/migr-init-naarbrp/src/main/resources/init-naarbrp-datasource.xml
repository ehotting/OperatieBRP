<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="init-runtime-datasource" class="com.atomikos.jdbc.AtomikosDataSourceBean" init-method="init"
          destroy-method="close">
        <property name="uniqueResourceName">
            <!--
             | Tijdens jUnit testen kan de ApplicationContext meerdere keren worden geinstantieerd.
             | Elke keer dient een unique naam gebruikt te worden, anders gaat Atomikos fout.
              -->
            <bean class="nl.bzk.algemeenbrp.jta.util.UniqueName">
                <property name="baseName" value="initDatabase"/>
            </bean>
        </property>
        <property name="xaDataSourceClassName" value="${sync.database.driver:org.postgresql.xa.PGXADataSource}"/>
        <property name="xaProperties">
            <bean class="nl.bzk.algemeenbrp.jta.database.XAPropertiesAdapter">
                <property name="driver" value="${sync.database.driver:org.postgresql.xa.PGXADataSource}"/>
                <property name="host" value="${jdbc.database.host:localhost}" />
                <property name="port" value="${jdbc.database.port:5432}" />
                <property name="name" value="${jdbc.database.name:brp}" />
                <property name="user" value="${jdbc.database.username:postgres}" />
                <property name="password" value="${jdbc.database.password:postgres}" />
            </bean>
        </property>

        <property name="maxPoolSize" value="${sync.database.maxpool:20}"/>
        <property name="minPoolSize" value="${sync.database.minpool:1}"/>
        <!--
        <property name="testQuery" value="select now()"/>
        -->
    </bean>

    <bean name="initRuntimeJpaVendorAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="showSql" value="false"/>
        <property name="generateDdl" value="false"/>
        <property name="databasePlatform" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
    </bean>

</beans>
