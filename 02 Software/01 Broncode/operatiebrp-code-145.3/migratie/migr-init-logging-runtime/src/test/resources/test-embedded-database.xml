<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd

        http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

    <bean id="embeddedHsqlDatabaseServer" class="org.hsqldb.server.Server" init-method="start" destroy-method="stop">
        <property name="port" value="9041"/>
        <property name="properties">
            <bean class="org.hsqldb.persist.HsqlProperties">
                <constructor-arg>
                    <props>
                        <prop key="hsqldb.reconfig_logging">false</prop>
                        <prop key="server.database.0">mem:brp</prop>
                        <prop key="server.dbname.0">brp</prop>
                        <prop key="server.database.1">mem:gbav</prop>
                        <prop key="server.dbname.1">gbav</prop>
                    </props>
                </constructor-arg>
            </bean>
        </property>
    </bean>

    <bean id="initializeBrpDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          depends-on="embeddedHsqlDatabaseServer">
        <property name="driverClassName" value="org.hsqldb.jdbc.JDBCDriver"/>
        <property name="url" value="jdbc:hsqldb:hsql://localhost:9041/brp"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <jdbc:initialize-database data-source="initializeBrpDataSource">
        <jdbc:script location="classpath:bmr/HSQLDB/HSQLDB.sql" encoding="UTF-8"/>
    </jdbc:initialize-database>
    <jdbc:initialize-database data-source="initializeBrpDataSource" ignore-failures="ALL">
        <jdbc:script location="classpath:bmr/HSQLDB/PENDING_BMR_CHANGES.sql" encoding="UTF-8"/>
    </jdbc:initialize-database>

    <bean id="initializeGbavDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          depends-on="embeddedHsqlDatabaseServer">
        <property name="driverClassName" value="org.hsqldb.jdbc.JDBCDriver"/>
        <property name="url" value="jdbc:hsqldb:hsql://localhost:9041/gbav"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

 
    <jdbc:initialize-database data-source="initializeGbavDataSource" ignore-failures="ALL">
        <jdbc:script location="classpath:sql/postgres.sql"/>
    </jdbc:initialize-database>
    <bean name="gbavInitializer" class="org.springframework.jdbc.datasource.init.DataSourceInitializer">
    	<property name="dataSource" ref="initializeGbavDataSource" />
    	<property name="databasePopulator">
    		<bean class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
    			<property name="sqlScriptEncoding" value="UTF-8" />
    			<property name="scripts">
    				<list>
			        	<bean class="nl.bzk.migratiebrp.init.naarbrp.util.HsqlSqlAdapter">
			        		<property name="sqlResource" value="classpath:sql/createInitVullingTables.sql" />
			        	</bean>
    				</list>
    			</property>
    		</bean>
    	</property>
    </bean>
</beans>