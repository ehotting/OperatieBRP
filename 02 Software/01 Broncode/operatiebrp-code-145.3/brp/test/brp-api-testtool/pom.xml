            <exclusions>
                <exclusion>
                    <groupId>nl.bzk.brp.leveren</groupId>
                    <artifactId>brp-delivery-dataaccess</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>nl.bzk.brp.leveren</groupId>
            <artifactId>brp-service-selectie</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>nl.bzk.brp.leveren</groupId>
                    <artifactId>brp-delivery-dataaccess</artifactId>
