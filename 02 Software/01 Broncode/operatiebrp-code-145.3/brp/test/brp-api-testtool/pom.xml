                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.leveren</groupId>
            <artifactId>brp-delivery-vrijbericht</artifactId>
            <version>${project.version}</version>
            <classifier>classes</classifier>
            <exclusions>
                <exclusion>
                    <groupId>nl.bzk.brp.leveren</groupId>
                    <artifactId>brp-delivery-dataaccess</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.leveren</groupId>
            <artifactId>brp-delivery-vrijbericht-publicatie</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.leveren</groupId>
            <artifactId>brp-delivery-stuf</artifactId>
            <version>${project.version}</version>
