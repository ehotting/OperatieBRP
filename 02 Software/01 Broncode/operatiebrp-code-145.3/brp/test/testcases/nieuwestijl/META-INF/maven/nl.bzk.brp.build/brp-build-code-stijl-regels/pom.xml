<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>nl.bzk.brp.build</groupId>
    <artifactId>brp-build-code-stijl-regels</artifactId>
    <packaging>jar</packaging>
    <version>128-SNAPSHOT</version>

    <name>BRP Build Code stijl regels</name>
    <description>
        Build code stijl regels for BRP projecten, bevat configuratie van regels van Checkstyle, PMD en Findbugs alsmede
        formatting.
    </description>
    <inceptionYear>2011</inceptionYear>

    <organization>
        <name>Ministerie van Binnenlandse Zaken en Koninkrijksrelaties</name>
        <url>http://www.operatiebrp.nl/</url>
    </organization>

    <ciManagement>
        <system>Jenkins</system>
        <url>https://www.modernodam.nl/ci</url>
    </ciManagement>

    <issueManagement>
        <system>Jira</system>
        <url>https://www.modernodam.nl/jira</url>
    </issueManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>brpcentral</id>
            <name>Remote repos</name>
            <url>https://www.modernodam.nl/nexus3/repository/public</url>
            <layout>default</layout>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>brpcentral</id>
            <name>Remote repos</name>
            <url>https://www.modernodam.nl/nexus3/repository/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>


    <distributionManagement>
        <repository>
            <id>brpcentral</id>
            <name>mGBA releases voor BRP</name>
            <url>https://www.modernodam.nl/nexus3/repository/releases</url>
        </repository>

        <snapshotRepository>
            <id>brpcentral</id>
            <name>mGBA snapshots voor BRP</name>
            <url>https://www.modernodam.nl/nexus3/repository/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>
