<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.0//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">
<suppressions>
    <!-- Exclude de ANTLR gegenereerde packages van issue checks, dit is gegenereerde code -->
    <suppress checks=".*" files=".*[\\/]antlr[\\/].*java"/>
    <!-- Tone down the checking for test code -->
    <suppress checks="EmptyBlock" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ImportControl" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="Javadoc.*" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MethodCount" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MethodLength" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="LineLength" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="JavadocPackage" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="AvoidStaticImport" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="DesignForExtension" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="RedundantThrows" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="SignatureDeclareThrowsException" files=".*[\\/]src[\\/]test[\\/]"/>

    <!-- Tone down the checking for generated code -->
    <suppress checks=".*" files=".*[\\/]generated-sources[\\/].*java"/>

</suppressions>
