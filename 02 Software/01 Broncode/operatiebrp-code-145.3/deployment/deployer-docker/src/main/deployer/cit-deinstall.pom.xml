                                    <goal>remove-images</goal>
                                </goals>
                                <configuration>
                                    <dockerArguments>-H cit-dok-01.modernodam.nl:2375</dockerArguments>
                                    <filter>label=nl.bzk.brp.applicatie</filter>
                                    <ignoreFailures>true</ignoreFailures>
                                </configuration>
                            </execution>
