<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.brp</groupId>
        <artifactId>deployment-deployer-docker-base</artifactId>
        <version>145.3</version>
        <relativePath>./docker-base.pom.xml</relativePath>
    </parent>

    <artifactId>deployment-deployer-docker-install-load</artifactId>
    <name>Deployment - Deployer - Docker (install - load)</name>
    <packaging>pom</packaging>

    <build>
        <defaultGoal>clean install</defaultGoal>
    </build>

    <profiles>
        <profile>
            <id>docker-install-load</id>
            <build>
                <plugins>
                    <!-- Load -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-brp-tar</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/images</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-release-docker</artifactId>
                                            <version>${tar.version}</version>
                                            <classifier>brp</classifier>
                                            <type>tar</type>
                                            <destFileName>brp-${tar.version}.tar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-iv-tar</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/images</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-release-docker</artifactId>
                                            <version>${tar.version}</version>
                                            <classifier>iv</classifier>
                                            <type>tar</type>
                                            <destFileName>iv-${tar.version}.tar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-isc-tar</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/images</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-release-docker</artifactId>
                                            <version>${tar.version}</version>
                                            <classifier>isc</classifier>
                                            <type>tar</type>
                                            <destFileName>isc-${tar.version}.tar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-logging-tar</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/images</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-release-docker</artifactId>
                                            <version>${tar.version}</version>
                                            <classifier>logging</classifier>
                                            <type>tar</type>
                                            <destFileName>logging-${tar.version}.tar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-tools-tar</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/images</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>nl.bzk.brp</groupId>
                                            <artifactId>distributie-release-docker</artifactId>
                                            <version>${tar.version}</version>
                                            <classifier>tools</classifier>
                                            <type>tar</type>
                                            <destFileName>tools-${tar.version}.tar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>docker-load-brp</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>target/images</workingDirectory>
                                    <executable>docker</executable>
                                    <commandlineArgs>${docker.host} ${docker.tls} load --input brp-${tar.version}.tar</commandlineArgs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-load-iv</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>target/images</workingDirectory>
                                    <executable>docker</executable>
                                    <commandlineArgs>${docker.host} ${docker.tls} load --input iv-${tar.version}.tar</commandlineArgs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-load-isc</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>target/images</workingDirectory>
                                    <executable>docker</executable>
                                    <commandlineArgs>${docker.host} ${docker.tls} load --input isc-${tar.version}.tar</commandlineArgs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-load-logging</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>target/images</workingDirectory>
                                    <executable>docker</executable>
                                    <commandlineArgs>${docker.host} ${docker.tls} load --input logging-${tar.version}.tar</commandlineArgs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-load-tools</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>target/images</workingDirectory>
                                    <executable>docker</executable>
                                    <commandlineArgs>${docker.host} ${docker.tls} load --input tools-${tar.version}.tar</commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>

            <dependencies>
                <!-- Hier dependency met versie 'LATEST' opnemen zodat maven de lijst van versies gaat ophalen -->
                <dependency>
                    <groupId>nl.bzk.brp</groupId>
                    <artifactId>distributie-release-docker</artifactId>
                    <version>LATEST</version>
                    <type>pom</type>
                    <exclusions>
                        <exclusion>
                            <groupId>*</groupId>
                            <artifactId>*</artifactId>
                        </exclusion>
                    </exclusions>                     
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
