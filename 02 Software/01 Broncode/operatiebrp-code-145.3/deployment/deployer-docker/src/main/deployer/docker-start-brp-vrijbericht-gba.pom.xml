<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.brp</groupId>
        <artifactId>deployment-deployer-docker-base</artifactId>
        <version>146-SNAPSHOT</version>
        <relativePath>./docker-base.pom.xml</relativePath>
    </parent>

    <artifactId>deployment-deployer-docker-start-brp-vrijbericht-gba</artifactId>
    <name>Deployment - Deployer - Docker (start - brp-vrijbericht-gba)</name>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>docker-start-brp-vrijbericht-gba</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>nl.bzk.brp</groupId>
                        <artifactId>deployment-plugin-dockerservice</artifactId>
                        <executions>
                            <execution>
                                <id>install</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <steps>
                                        <step>
                                            <!--
                                            sleutelbos is nu een globale service die overal een named volume
                                            sleutelbos aanmaakt, zodat de services die de sleutel gegevens
                                            gebruiken deze van de named volume sleutelbos kunnen gebruiken
                                            -->
                                            <services>
                                                <service>
                                                    <name>brp-sleutelbos</name>
                                                    <version>${image.version}</version>
                                                </service>
                                            </services>
                                            <action>create</action>
                                        </step>
                                        <step>
                                            <services>
                                                <!-- Logging -->
                                                <service>
                                                    <name>logging-elasticsearch</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>logging-logstash</name>
                                                    <version>${image.version}</version>
                                                </service>

                                                <!-- Databases -->
                                                <service>
                                                    <name>brp-database-kern</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>brp-archiveringdatabase</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>brp-protocolleringdatabase</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>tools-afnemervoorbeeld-database</name>
                                                    <version>${image.version}</version>
                                                </service>

                                                <!-- Message broker -->
                                                <service>
                                                    <name>brp-messagebroker</name>
                                                    <version>${image.version}</version>
                                                </service>

                                                <!-- SUBJECT: Vrijbericht GBA -->
                                                <service>
                                                    <name>brp-vrijbericht-gba</name>
                                                    <version>${image.version}</version>
                                                </service>

                                                <!-- BRP -->
                                                <service>
                                                    <name>brp-vrijbericht</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>brp-verzending</name>
                                                    <version>${image.version}</version>
                                                </service>
                                                <service>
                                                    <name>tools-afnemervoorbeeld</name>
                                                    <version>${image.version}</version>
                                                </service>
                                            </services>
                                            <delay>10</delay>
                                        </step>
                                    </steps>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
