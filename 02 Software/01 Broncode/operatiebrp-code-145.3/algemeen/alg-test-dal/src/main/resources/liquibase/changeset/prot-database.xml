<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
">
    <preConditions onFail="HALT">
        <dbms type="postgresql"/>
    </preConditions>

    <changeSet id="1" author="brp">
        <comment>Maak de database structuur.</comment>
        <sqlFile path="bmr/Postgres/Prot/Protocol_BRP_structuur.sql" splitStatements="false"/>
        <sqlFile path="bmr/Postgres/Prot/Protocol_BRP_structuur_aanvullend.sql" splitStatements="false"/>
    </changeSet>

    <changeSet id="2" author="brp">
        <comment>Insert de statische stamgegevens: soorten, waardes voor enumeraties etc.</comment>
        <sqlFile path="bmr/Postgres/Prot/Protocol_BRP_statische_stamgegevens.sql"/>
    </changeSet>

	<changeSet id="3" author="brp">
        <comment>Custom changes</comment>
		<sqlFile path="bmr/Postgres/Prot/Protocol_BRP_custom_changes.sql"/>
    </changeSet>

    <changeSet id="4" author="brp">
        <comment>Maakt de indexen in de database.</comment>
        <sqlFile path="bmr/Postgres/Prot/Protocol_BRP_indexen.sql" splitStatements="false"/>
    </changeSet>

    <changeSet id="5" author="brp">
        <comment>Maakt de rechten in de database.</comment>
        <sqlFile path="bmr/Postgres/Prot/Protocol_BRP_rechten.sql" splitStatements="false"/>
    </changeSet>

</databaseChangeLog>
