        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- Testing -->
        <skipTests>false</skipTests>
        <!-- Coverage -->
        <jacoco.location>${project.build.directory}/jacoco.exec</jacoco.location>
        <!-- Jacoco kan niet overweg met het parallel uitvoeren van testen en het simultaan wegschrijven
                 van coverage data naar 1 en dezelfde file. Daarom worden alle resultaten los geregistreerd
                 en voor het uitvoeren van sonar gemerged door het uitvoeren van "mvn -f build\jacoco\merge.pom.xml
                 -Pcoverage jacoco:merge" in de operatiebrp-code directory -->
        <sonar.jacoco.reportPath>${user.dir}/jacoco-merged.exec</sonar.jacoco.reportPath>
        <sonar.exclusions>**/jquery*.js</sonar.exclusions>
